<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-12">
    <h1 class="mb-4">Your Bookings</h1>

    <% if (bookings.length === 0) { %>
      <p>You have no bookings yet.</p>
    <% } else { %>
      <div class="row">
<% bookings.forEach(booking => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card border">
              <div class="card-body">
                <h5 class="card-title"><%= booking.listing.title %></h5>
                <p class="card-text">Location: <%= booking.listing.location %></p>
                <p class="card-text">Guest: <%= booking.guestName %> (<%= booking.guestAge %> yrs)</p>
                <p class="card-text">Check-in: <%= booking.checkIn.toDateString() %></p>
                <p class="card-text">Check-out: <%= booking.checkOut.toDateString() %></p>
                <p class="card-text">Guests: <%= booking.guests %></p>
                <p class="card-text">Payment Method: <%= booking.paymentMethod %></p>
                <div class="d-flex justify-content-between">
                  <a href="/listings/<%= booking.listing._id %>" class="btn btn-primary">View Listing</a>
                  <form method="POST" action="/bookings/<%= booking._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this booking?')">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</div>
