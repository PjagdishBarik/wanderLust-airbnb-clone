<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <h1 class="mb-4">Bookings Received</h1>

  <% if (bookings.length === 0) { %>
    <div class="alert alert-info">
      <h4>No bookings received yet.</h4>
      <p>When guests book your listings, they will appear here.</p>
    </div>
  <% } else { %>
    <div class="row">
      <% bookings.forEach(booking => { %>
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= booking.listing.title %></h5>
              <p class="card-text">
                <strong>Guest:</strong> <%= booking.guestName %> (<%= booking.guestAge %> yrs)<br>
                <strong>Check-in:</strong> <%= new Date(booking.checkIn).toLocaleDateString() %><br>
                <strong>Check-out:</strong> <%= new Date(booking.checkOut).toLocaleDateString() %><br>
                <strong>Guests:</strong> <%= booking.guests %><br>
                <strong>Payment:</strong> <%= booking.paymentMethod %>
              </p>
              <a href="/listings/<%= booking.listing._id %>" class="btn btn-primary">View Listing</a>
              <a href="/bookings/<%= booking._id %>" class="btn btn-secondary">Booking Details</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>
