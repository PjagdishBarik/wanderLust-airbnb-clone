<% layout("/layouts/boilerplate") %>

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <h2 class="text-center mb-4">Edit your Listing</h2>

      <form
        action="/listings/<%= listing._id %>?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
        class="shadow p-4 rounded bg-light"
      >
        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label fw-bold">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="listing[title]"
            value="<%= listing.title %>"
            required
          />
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label fw-bold">Description</label>
          <textarea
            class="form-control"
            id="description"
            name="listing[description]"
            rows="3"
            required
          ><%= listing.description %></textarea>
        </div>

        <!-- Original Image -->
        <div class="mb-3 text-center">
          <label class="form-label fw-bold d-block">Original Image</label>
          <img
            src="<%= originalImageurl %>"
            class="rounded shadow-sm mb-2"
            alt="listing image"
            style="width: 100%; max-width: 300px; height: auto;"
          />
        </div>

        <!-- Upload New Image -->
        <div class="mb-3">
          <label for="image" class="form-label fw-bold">Upload new Image</label>
          <input
            type="file"
            class="form-control"
            id="image"
            name="listing[image]"
            accept="image/*"
          />
        </div>

        <!-- Price -->
        <div class="mb-3">
          <label for="price" class="form-label fw-bold">Price (â‚¹/Night)</label>
          <input
            type="number"
            class="form-control"
            id="price"
            name="listing[price]"
            value="<%= listing.price %>"
            required
          />
        </div>

        <!-- Country -->
        <div class="mb-3">
          <label for="country" class="form-label fw-bold">Country</label>
          <input
            type="text"
            class="form-control"
            id="country"
            name="listing[country]"
            value="<%= listing.country %>"
            required
          />
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label for="location" class="form-label fw-bold">Location</label>
          <input
            type="text"
            class="form-control"
            id="location"
            name="listing[location]"
            value="<%= listing.location %>"
            required
          />
        </div>

        <!-- Buttons -->
        <div class="text-center">
          <button type="submit" class="btn btn-primary px-4 py-2">Update</button>
          <a href="/listings/<%= listing._id %>" class="btn btn-secondary px-4 py-2 ms-2">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>
