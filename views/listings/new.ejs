<% layout("/layouts/boilerplate") %>

<div class="container mt-5 mb-5">
  <h1 class="text-center mb-4">Add New Listing</h1>

  <form action="/listings" method="POST" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
    <div class="mb-3">
      <label for="title" class="form-label fw-bold">Title</label>
      <input type="text" class="form-control" id="title" name="listing[title]" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label fw-bold">Description</label>
      <textarea class="form-control" id="description" name="listing[description]" rows="3" required></textarea>
    </div>

    <div class="mb-3">
      <label for="price" class="form-label fw-bold">Price (â‚¹/Night)</label>
      <input type="number" class="form-control" id="price" name="listing[price]" min="0" required>
    </div>

    <div class="mb-3">
      <label for="location" class="form-label fw-bold">Location</label>
      <input type="text" class="form-control" id="location" name="listing[location]" placeholder="City, State" required>
    </div>

    <div class="mb-3">
      <label for="country" class="form-label fw-bold">Country</label>
      <input type="text" class="form-control" id="country" name="listing[country]" required>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label fw-bold">Upload Image</label>
      <input type="file" class="form-control" id="image" name="listing[image]" accept="image/*">
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-success px-4 py-2">Add Listing</button>
      <a href="/listings" class="btn btn-secondary px-4 py-2 ms-2">Cancel</a>
    </div>
  </form>
</div>
